<?php
class view
{
    function __construct()
    {
        $dir = "../page";
        $handle = opendir($dir);
        while ($file = readdir($handle)) {
            if ($file !== '..' && $file !== '.') {
                $f = $dir . '/' . $file;
                if (is_file($f)) {
                    $this->$f = file_get_contents($f);
                }
            }
        }
    }
}
